<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arnarfreyr.dicegame2000.Game">

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:onClick="clickRoll"
        android:text="@string/btn_submit_score"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.932"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ImageView
        android:id="@+id/diceImg0"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:onClick="clickDie"
        app:layout_constraintBottom_toBottomOf="@+id/diceImg1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/diceImg1"
        app:layout_constraintTop_toTopOf="@+id/diceImg1"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/red1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/diceImg1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="95dp"
        android:clickable="true"
        android:onClick="clickDie"
        app:layout_constraintLeft_toRightOf="@+id/diceImg0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/red2"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/diceImg2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="clickDie"
        app:layout_constraintBottom_toBottomOf="@+id/diceImg3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/diceImg3"
        app:layout_constraintTop_toTopOf="@+id/diceImg3"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/red3"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/diceImg3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:clickable="true"
        android:onClick="clickDie"
        app:layout_constraintLeft_toRightOf="@+id/diceImg2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/red4"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/diceImg4"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="clickDie"
        app:layout_constraintBottom_toBottomOf="@+id/diceImg5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/diceImg5"
        app:layout_constraintTop_toTopOf="@+id/diceImg5"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/red5"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/diceImg5"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="265dp"
        android:clickable="true"
        android:onClick="clickDie"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintLeft_toRightOf="@+id/diceImg4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/red6"
        tools:layout_constraintTop_creator="1" />

    <Spinner
        android:id="@+id/lstBets"
        android:layout_width="154dp"
        android:layout_height="43dp"
        android:layout_marginBottom="31dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <ProgressBar
        android:id="@+id/pbRounds"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="195dp"
        android:layout_height="37dp"
        android:layout_marginTop="36dp"
        android:max="10"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/txtRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/pbRounds"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="3dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
